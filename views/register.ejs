<div
  style="
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    border: 1px solid #e0e0e0;
    padding: 10px;
    border-radius: 4vh;
    height: auto;
    min-width: 450px;
    min-height: 500px;
    padding: 48px 40px 36px;
    overflow: hidden;
    font-size: 14px;
    line-height: 1.4286;
    color: #202124;
    font-family: roboto, Noto Sans Myanmar UI, arial, sans-serif;
  "
>
  <p style="display: inline; max-height: 50px">Create your Google Account</p>
  <form class="register" action="/register" method="POST">
    <input
      class="input"
      type="text"
      id="txtSearch"
      name="username"
      placeholder="Enter Name"
      style="
        max-height: 400px;
        border-color: #e0e0e0;
        border-radius: 4vh;
        font-size: 14px;
        height: 20px;
        padding: 6px 8px;
        display: block;
        width: 70%;
        margin: 15px 0 15px 0;
      "
      onkeypress="searchKeyPress(event)"
    />
    <input
      class="input"
      type="email"
      id="txtSearch"
      name="email"
      placeholder="Email address"
      style="
        width: 70%;
        margin: 15px 0 15px 0;
        border-color: #e0e0e0;
        border-radius: 4vh;
        display: block;
      "
      onkeypress="searchKeyPress(event)"
    />
    <input
      class="input"
      type="password"
      id="txtSearch"
      name="password"
      placeholder="password"
      style="
        width: 70%;
        margin: 15px 0 15px 0;
        border-color: #e0e0e0;
        border-radius: 4vh;
        display: block;
      "
      onkeypress="searchKeyPress(event)"
    />
    <script>
      function searchKeyPress(e) {
        // look for window.event in case event isn't passed in
        e = e || window.event;
        if (e.keyCode == 13) {
          document.getElementById("btnSearch").click();
          return false;
        }
        return true;
      }
    </script>

    <input
      type="submit"
      id="btnSearch"
      name="register"
      value="Next"
      style="
        border: none;
        background-color: rgb(34, 66, 169);
        color: white;
        border-radius: 15%;
        padding: 10px;
        font-size: 14px;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande',
          'Lucida Sans', Arial, sans-serif;
      "
    />
  </form>
</div>
